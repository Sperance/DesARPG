<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ViewStatLine">
        <attr name="leftIcon" format="reference" />
        <attr name="text" format="string" />
        <attr name="textPrefix" format="string" />
        <attr name="textPostfix" format="string" />
        <attr name="textBottom" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center_vertical" value="0x10" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="fill_horizontal" value="0x07" />
        </attr>
        <attr name="prefixTextColor" format="color" />
        <attr name="prefixTextSize" format="dimension" />
        <attr name="prefixTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3" />
        </attr>
        <attr name="postfixTextColor" format="color" />
        <attr name="postfixTextSize" format="dimension" />
        <attr name="postfixTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3" />
        </attr>
        <attr name="bottomTextColor" format="color" />
        <attr name="bottomTextSize" format="dimension" />
        <attr name="bottomTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3" />
        </attr>
        <attr name="mainTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3" />
        </attr>
        <attr name="cardStrokeColor" format="color" />
        <attr name="cardStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ViewWorkObject">
        <!-- Общие атрибуты -->
        <attr name="itemName" format="string"/>
        <attr name="timerText" format="string"/>
        <attr name="levelText" format="string"/>
        <attr name="nextItemText" format="string"/>
        <attr name="expText" format="string"/>
        <attr name="progressBarProgress" format="integer"/>
        <attr name="textColor"/>
        <attr name="textSize"/>

        <!-- Атрибуты для item_name -->
        <attr name="itemNameTextColor" format="color"/>
        <attr name="itemNameTextSize" format="dimension"/>
        <attr name="itemNameTypeface" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>

        <!-- Атрибуты для timer_text -->
        <attr name="timerTextColor" format="color"/>
        <attr name="timerTextSize" format="dimension"/>
        <attr name="timerTypeface" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>

        <!-- Атрибуты для level_text -->
        <attr name="levelTextColor" format="color"/>
        <attr name="levelTextSize" format="dimension"/>
        <attr name="levelTypeface" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>

        <!-- Атрибуты для next_item_text -->
        <attr name="nextItemTextColor" format="color"/>
        <attr name="nextItemTextSize" format="dimension"/>
        <attr name="nextItemTypeface" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>

        <!-- Атрибуты для exp_text -->
        <attr name="expTextColor" format="color"/>
        <attr name="expTextSize" format="dimension"/>
        <attr name="expTypeface" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
    </declare-styleable>

</resources>